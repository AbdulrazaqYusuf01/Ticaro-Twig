{% extends 'base.html.twig' %}

{% block title %}404 - Page Not Found{% endblock %}

{% block body %}
<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-50 flex items-center justify-center">
    <div class="text-center">
        <h1 class="text-9xl font-bold text-indigo-600 mb-4">404</h1>
        <h2 class="text-3xl font-bold text-gray-800 mb-4">Page Not Found</h2>
        <p class="text-gray-600 mb-8">The page you're looking for doesn't exist.</p>
        <a href="/" class="bg-indigo-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-indigo-700 transition-colors inline-block">
            Go Back Home
        </a>
    </div>
</div>
{% endblock %}