{% extends 'base.html.twig' %}

{% block title %}Login - TicketFlow{% endblock %}

{% block body %}
<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-50">
    <div class="max-w-[1440px] mx-auto px-6 py-20">
        <div class="max-w-md mx-auto bg-white rounded-2xl shadow-xl p-8">
            <h2 class="text-3xl font-bold text-gray-800 mb-2">Welcome Back</h2>
            <p class="text-gray-600 mb-8">Sign in to your account</p>
            
            {% if errors.general %}
                <div class="mb-4 p-4 bg-red-50 border border-red-200 rounded-lg text-red-700">
                    {{ errors.general }}
                </div>
            {% endif %}
            
            <form method="POST" action="/login" class="space-y-6">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Email</label>
                    <input
                        type="email"
                        name="email"
                        value="{{ email|default('') }}"
                        class="w-full px-4 py-3 rounded-lg border {% if errors.email %}border-red-500{% else %}border-gray-300{% endif %} focus:outline-none focus:ring-2 focus:ring-indigo-500"
                        placeholder="demo@ticketflow.com"
                    />
                    {% if errors.email %}
                        <p class="text-red-500 text-sm mt-1">{{ errors.email }}</p>
                    {% endif %}
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Password</label>
                    <input
                        type="password"
                        name="password"
                        class="w-full px-4 py-3 rounded-lg border {% if errors.password %}border-red-500{% else %}border-gray-300{% endif %} focus:outline-none focus:ring-2 focus:ring-indigo-500"
                        placeholder="demo123"
                    />
                    {% if errors.password %}
                        <p class="text-red-500 text-sm mt-1">{{ errors.password }}</p>
                    {% endif %}
                </div>

                <button type="submit" class="w-full bg-indigo-600 text-white py-3 rounded-lg font-semibold hover:bg-indigo-700 transition-colors">
                    Sign In
                </button>
            </form>

            <div class="mt-6 text-center text-gray-600">
                Don't have an account? <a href="/signup" class="text-indigo-600 hover:underline">Sign up</a>
            </div>

            <div class="mt-6 p-4 bg-blue-50 rounded-lg">
                <p class="text-sm text-gray-700"><strong>Demo Credentials:</strong></p>
                <p class="text-sm text-gray-600">Email: demo@ticketflow.com</p>
                <p class="text-sm text-gray-600">Password: demo123</p>
            </div>
        </div>
    </div>
</div>
{% endblock %}