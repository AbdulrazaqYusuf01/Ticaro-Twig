{% extends 'base.html.twig' %}

{% block title %}Tickets - TicketFlow{% endblock %}

{% block body %}
<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-50">
    <div class="max-w-[1440px] mx-auto px-6 py-12">
        <div class="flex items-center justify-between mb-8">
            <div>
                <h1 class="text-3xl font-bold text-gray-800 mb-2">Ticket Management</h1>
                <p class="text-gray-600">Create, view, and manage support tickets</p>
            </div>
            <button
                onclick="document.getElementById('ticket-form').classList.toggle('hidden')"
                class="flex items-center gap-2 bg-indigo-600 text-white px-6 py-3 rounded-lg hover:bg-indigo-700 transition-colors"
            >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
                New Ticket
            </button>
        </div>

        {# Ticket Form #}
        <div id="ticket-form" class="{% if not editingTicket %}hidden{% endif %} bg-white rounded-2xl shadow-lg p-8 mb-8">
            <h2 class="text-2xl font-bold text-gray-800 mb-6">
                {% if editingTicket %}Edit Ticket{% else %}Create New Ticket{% endif %}
            </h2>
            
            <form method="POST" action="{% if editingTicket %}/tickets/{{ editingTicket.id }}/update{% else %}/tickets/create{% endif %}" class="space-y-6">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                        Title <span class="text-red-500">*</span>
                    </label>
                    <input
                        type="text"
                        name="title"
                        value="{% if editingTicket %}{{ editingTicket.title }}{% elseif formData %}{{ formData.title }}{% endif %}"
                        class="w-full px-4 py-3 rounded-lg border {% if errors.title %}border-red-500{% else %}border-gray-300{% endif %} focus:outline-none focus:ring-2 focus:ring-indigo-500"
                        placeholder="Brief description of the issue"
                    />
                    {% if errors.title %}
                        <p class="text-red-500 text-sm mt-1">{{ errors.title }}</p>
                    {% endif %}
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Description</label>
                    <textarea
                        name="description"
                        rows="4"
                        class="w-full px-4 py-3 rounded-lg border {% if errors.description %}border-red-500{% else %}border-gray-300{% endif %} focus:outline-none focus:ring-2 focus:ring-indigo-500"
                        placeholder="Detailed description of the ticket..."
                    >{% if editingTicket %}{{ editingTicket.description }}{% elseif formData %}{{ formData.description }}{% endif %}</textarea>
                    {% if errors.description %}
                        <p class="text-red-500 text-sm mt-1">{{ errors.description }}</p>
                    {% endif %}
                    <p class="text-xs text-gray-500 mt-1">
                        <span id="char-count">{% if editingTicket %}{{ editingTicket.description|length }}{% else %}0{% endif %}</span>/500 characters
                    </p>
                </div>

                <div class="grid md:grid-cols-2 gap-6">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">
                            Status <span class="text-red-500">*</span>
                        </label>
                        <select
                            name="status"
                            class="w-full px-4 py-3 rounded-lg border {% if errors.status %}border-red-500{% else %}border-gray-300{% endif %} focus:outline-none focus:ring-2 focus:ring-indigo-500"
                        >
                            <option value="open" {% if (editingTicket and editingTicket.status == 'open') or (formData and formData.status == 'open') %}selected{% endif %}>Open</option>
                            <option value="in_progress" {% if (editingTicket and editingTicket.status == 'in_progress') or (formData and formData.status == 'in_progress') %}selected{% endif %}>In Progress</option>
                            <option value="closed" {% if (editingTicket and editingTicket.status == 'closed') or (formData and formData.status == 'closed') %}selected{% endif %}>Closed</option>
                        </select>
                        {% if errors.status %}
                            <p class="text-red-500 text-sm mt-1">{{ errors.status }}</p>
                        {% endif %}
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Priority</label>
                        <select
                            name="priority"
                            class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-indigo-500"
                        >
                            <option value="low" {% if (editingTicket and editingTicket.priority == 'low') or (formData and formData.priority == 'low') %}selected{% endif %}>Low</option>
                            <option value="medium" {% if (editingTicket and editingTicket.priority == 'medium') or (formData and formData.priority == 'medium') or not editingTicket %}selected{% endif %}>Medium</option>
                            <option value="high" {% if (editingTicket and editingTicket.priority == 'high') or (formData and formData.priority == 'high') %}selected{% endif %}>High</option>
                        </select>
                    </div>
                </div>

                <div class="flex gap-4">
                    <button
                        type="submit"
                        class="flex-1 bg-indigo-600 text-white py-3 rounded-lg font-semibold hover:bg-indigo-700 transition-colors"
                    >
                        {% if editingTicket %}Update Ticket{% else %}Create Ticket{% endif %}
                    </button>
                    <button
                        type="button"
                        onclick="{% if editingTicket %}window.location.href='/tickets'{% else %}document.getElementById('ticket-form').classList.add('hidden'){% endif %}"
                        class="flex-1 bg-gray-100 text-gray-700 py-3 rounded-lg font-semibold hover:bg-gray-200 transition-colors"
                    >
                        Cancel
                    </button>
                </div>
            </form>
        </div>

        {# Tickets List #}
        {% if tickets|length == 0 %}
            <div class="bg-white rounded-2xl shadow-lg p-12 text-center">
                <svg class="w-16 h-16 mx-auto text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z"></path>
                </svg>
                <h3 class="text-xl font-semibold text-gray-800 mb-2">No tickets yet</h3>
                <p class="text-gray-600 mb-6">Create your first ticket to get started</p>
                <button
                    onclick="document.getElementById('ticket-form').classList.remove('hidden')"
                    class="bg-indigo-600 text-white px-6 py-3 rounded-lg hover:bg-indigo-700"
                >
                    Create First Ticket
                </button>
            </div>
        {% else %}
            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
                {% for ticket in tickets %}
                    {% include 'partials/ticket_card.html.twig' with {'ticket': ticket} %}
                {% endfor %}
            </div>
        {% endif %}
    </div>
</div>

<script>
    // Character counter for description
    const textarea = document.querySelector('textarea[name="description"]');
    const charCount = document.getElementById('char-count');
    
    if (textarea && charCount) {
        textarea.addEventListener('input', function() {
            charCount.textContent = this.value.length;
        });
    }
</script>
{% endblock %}